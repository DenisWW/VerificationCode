<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_profit_back_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:minHeight="20dp"
        android:text="盈利回测"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_back_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="20dp"
        android:text="回测规则"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_profit_back_title"
        app:layout_constraintRight_toLeftOf="@+id/iv_back_rule_arrow_right"
        app:layout_constraintTop_toTopOf="@+id/tv_profit_back_title" />

    <ImageView
        android:id="@+id/iv_back_rule_arrow_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="12dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_profit_back_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_profit_back_title" />

    <TextView
        android:id="@+id/tv_history_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:text="在历史上PB等于今日PB的交易日买入"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_profit_back_title" />

    <LinearLayout
        android:id="@+id/ll_index_up_or_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_content">

        <View
            android:id="@+id/view_index_up"
            android:layout_width="10dp"
            android:layout_height="3dp"
            android:background="#EB4A38" />

        <TextView
            android:id="@+id/tv_index_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="盈利概率"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_index_center_down"
            android:layout_width="10dp"
            android:layout_height="3dp"
            android:layout_marginLeft="20dp"
            android:background="#2A83FF" />

        <TextView
            android:id="@+id/tv_index_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="平均盈利"
            android:textSize="12sp" />

    </LinearLayout>

    <com.nineone.verificationcode.view.SimpleHistogramFundView
        android:id="@+id/empty_view2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_index_up_or_down" />

    <View
        android:id="@+id/dv3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="#f5f5f7"
        app:layout_constraintTop_toBottomOf="@+id/empty_view2" />

</androidx.constraintlayout.widget.ConstraintLayout>
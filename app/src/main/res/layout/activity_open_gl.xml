<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.OpenGlActivity">

    <com.nineone.verificationcode.view.DisplayShapeView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone" />

    <com.nineone.verificationcode.view.SimpleShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_top_icon"
        android:background="@color/white"
        android:padding="12dp"
        app:shadow_alpha="0.1"
        app:shadow_radius_dp="8dp"
        app:shadow_round_corner_dp="10dp">

        <!--        <com.nineone.verificationcode.view.SimpleShadowLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/login_top_icon"-->
        <!--            android:layout_margin="12dp"-->
        <!--            app:shadow_dp="12dp">-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="12312312312312312" />
        <!--        </com.nineone.verificationcode.view.SimpleShadowLayout>-->
    </com.nineone.verificationcode.view.SimpleShadowLayout>

    <TextView
        android:id="@+id/text_test_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp" />

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
        <TextView
            android:id="@+id/center_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/solid_f3f5f7_5"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/text_selector"
            android:text="测试一下"
            android:textSize="18sp" />
    </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/solid_ffffff_5">

        <View
            android:id="@+id/line_full_chart_view"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/tv_fund_created"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_full_fund_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/line_full_chart_view"
            android:gravity="center|start"
            android:text="易方达沪深300ETF联接 "
            android:layout_marginLeft="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_fund_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_full_fund_title"
            android:layout_alignLeft="@+id/tv_full_fund_title"
            android:layout_marginTop="6dp"
            android:text="481009"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fund_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_fund_code"
            android:layout_alignBottom="@+id/tv_fund_code"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@+id/tv_fund_code"
            android:background="@drawable/stroke_eb4a38_half"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="场外"
            android:textColor="#EB4A38"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_fund_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_fund_code"
            android:layout_alignBottom="@+id/tv_fund_code"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_fund_status"
            android:background="@drawable/solid_daf2e4_1"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="低风险"     android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="#12B370"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_fund_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fund_code"
            android:layout_alignLeft="@+id/tv_full_fund_title"
            android:layout_marginTop="6dp"
            android:text="成立: 2009-08-26"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_fund_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_fund_created"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_fund_status"
            android:text="规模: 64.13亿"
            android:textSize="10sp" />

        <View
            android:id="@+id/dv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/tv_fund_created"
            android:background="@color/dk_color_F5F6F7" />


        <TextView
            android:id="@+id/tv_fund_earnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dv"
            android:text="10.20%"
            android:textColor="#EB4A38"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_fund_earnings_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fund_earnings"
            android:text="跟踪指数5年平均收益"
            android:textColor="#999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_fund_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dv"
            android:layout_alignTop="@+id/tv_fund_earnings"
            android:layout_alignBottom="@+id/tv_fund_earnings_time"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/solid_eb4a38_5"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="去购买"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</FrameLayout>
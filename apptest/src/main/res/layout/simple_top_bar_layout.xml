<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_header_container"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <!--navigation-->
    <TextView
        android:id="@+id/simple_left_tv"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:text="left"
        app:layout_constraintLeft_toRightOf="@+id/simple_left_iv" />

    <ImageView
        android:id="@+id/simple_left_iv"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/test"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/simple_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/simple_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintRight_toLeftOf="@+id/simple_right_iv" />


    <ImageView
        android:id="@+id/simple_right_iv"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/test"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>